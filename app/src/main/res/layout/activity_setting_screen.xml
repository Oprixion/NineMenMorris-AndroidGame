<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".SettingScreen">

    <SeekBar
        android:id="@+id/adjustVolume"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#1F9FF6"
        android:thumbTint="#1F9FF6"
        app:layout_constraintBottom_toBottomOf="@+id/settingsMuteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/settingsMuteButton"
        app:layout_constraintTop_toTopOf="@+id/settingsMuteButton" />

    <ToggleButton
        android:id="@+id/settingsMuteButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_mute_on"
        android:checked="true"
        android:fontFamily="@font/amatic_sc_bold"
        android:onClick="toggleMute"
        android:textOff=" "
        android:textOn=" "
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTitle" />

    <Button
        android:id="@+id/howToPlay"
        android:layout_width="231dp"
        android:layout_height="67dp"
        android:background="@drawable/button_how_to_play"
        android:fontFamily="@font/amatic_sc_bold"
        android:onClick="toHelpScreen"
        app:layout_constraintBottom_toTopOf="@+id/backToHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsMuteButton"
        app:layout_constraintVertical_bias=".1" />

    <Button
        android:id="@+id/backToHome"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_back"
        android:fontFamily="@font/amatic_sc_bold"
        android:onClick="goBackHome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".03"
        app:srcCompat="@drawable/background_settings" />
</androidx.constraintlayout.widget.ConstraintLayout>