<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".PvcGameScreen">

    <ImageView
        android:id="@+id/backgroundStars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/background" />

    <ImageView
        android:id="@+id/backgroundPlanet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBoardConnecter"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBoardConnecter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toTopOf="@+id/backgroundBoardConnecter"
        app:srcCompat="@drawable/background_planet" />

    <ImageView
        android:id="@+id/backgroundBoardConnecter"
        android:layout_width="380dp"
        android:layout_height="380dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".65"
        app:srcCompat="@drawable/background_board_connect" />

    <Button
        android:id="@+id/button00"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintStart_toStartOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toTopOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/button01"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintEnd_toStartOf="@+id/button02"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button00"
        app:layout_constraintTop_toTopOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/button02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toTopOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/button03"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button05"
        app:layout_constraintStart_toStartOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toBottomOf="@+id/button00"
        app:layout_constraintVertical_bias="0.503" />

    <Button
        android:id="@+id/button04"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button07"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toBottomOf="@+id/button02"
        app:layout_constraintVertical_bias="0.51" />

    <Button
        android:id="@+id/button05"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBoardConnecter"
        app:layout_constraintStart_toStartOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/button06"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBoardConnecter"
        app:layout_constraintEnd_toStartOf="@+id/button07"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/button05" />

    <Button
        android:id="@+id/button07"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBoardConnecter"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/button10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/token_none"
        app:layout_constraintStart_toStartOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toBottomOf="@+id/button00" />

    <Button
        android:id="@+id/button11"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintEnd_toStartOf="@+id/button12"
        app:layout_constraintStart_toEndOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/button01" />

    <Button
        android:id="@+id/button12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/token_none"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toBottomOf="@+id/button02" />

    <Button
        android:id="@+id/button13"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintStart_toEndOf="@+id/button03"
        app:layout_constraintTop_toBottomOf="@+id/button10"
        app:layout_constraintVertical_bias="0.492" />

    <Button
        android:id="@+id/button14"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button17"
        app:layout_constraintEnd_toStartOf="@+id/button04"
        app:layout_constraintTop_toBottomOf="@+id/button12"
        app:layout_constraintVertical_bias="0.506" />

    <Button
        android:id="@+id/button15"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button05"
        app:layout_constraintStart_toStartOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/button16"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button06"
        app:layout_constraintEnd_toStartOf="@+id/button17"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/button15" />

    <Button
        android:id="@+id/button17"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button07"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/button20"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/token_none"
        app:layout_constraintStart_toStartOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toBottomOf="@+id/button10" />

    <Button
        android:id="@+id/button21"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintEnd_toStartOf="@+id/button22"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/button20"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <Button
        android:id="@+id/button22"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/token_none"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBoardConnecter"
        app:layout_constraintTop_toBottomOf="@+id/button12" />

    <Button
        android:id="@+id/button23"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button25"
        app:layout_constraintStart_toEndOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/button20" />

    <Button
        android:id="@+id/button24"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button27"
        app:layout_constraintEnd_toStartOf="@+id/button14"
        app:layout_constraintTop_toBottomOf="@+id/button22"
        app:layout_constraintVertical_bias="0.523" />

    <Button
        android:id="@+id/button25"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button15"
        app:layout_constraintStart_toStartOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/button26"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button16"
        app:layout_constraintEnd_toStartOf="@+id/button27"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/button25" />

    <Button
        android:id="@+id/button27"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="104dp"
        android:background="@drawable/token_none"
        app:layout_constraintBottom_toTopOf="@+id/button17"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBoardConnecter" />

    <Button
        android:id="@+id/quitPvcButton"
        android:layout_width="136dp"
        android:layout_height="83dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/button_quit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.991"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/helpsButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/button_help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mutesButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_mute_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/turnWidget"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/playerRed"
        app:layout_constraintEnd_toStartOf="@+id/playerRedCounter"
        app:layout_constraintStart_toEndOf="@+id/playerBlueCounter"
        app:layout_constraintTop_toBottomOf="@+id/mutesButton"
        app:srcCompat="@drawable/turn_blue" />

    <ImageView
        android:id="@+id/playerBlue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mutesButton"
        app:srcCompat="@drawable/blue_human" />

    <ImageView
        android:id="@+id/playerRed"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mutesButton"
        app:srcCompat="@drawable/red_human" />

    <ImageView
        android:id="@+id/playerBlueCounter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-20dp"
        app:layout_constraintBottom_toBottomOf="@+id/playerBlue"
        app:layout_constraintStart_toEndOf="@+id/playerBlue"
        app:layout_constraintTop_toTopOf="@+id/playerBlue"
        app:srcCompat="@drawable/font_9" />

    <ImageView
        android:id="@+id/playerRedCounter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/playerRed"
        app:layout_constraintEnd_toStartOf="@+id/playerRed"
        app:layout_constraintTop_toTopOf="@+id/playerRed"
        app:srcCompat="@drawable/font_9" />

</androidx.constraintlayout.widget.ConstraintLayout>