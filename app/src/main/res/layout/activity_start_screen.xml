<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartScreen">

    <Button
        android:id="@+id/playButton"
        android:layout_width="144dp"
        android:layout_height="69dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/amatic_sc_bold"
        android:onClick="openModeSelection"
        android:text="Play"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/creditsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.949" />

    <Button
        android:id="@+id/creditsButton"
        android:layout_width="144dp"
        android:layout_height="69dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/amatic_sc_bold"
        android:onClick="openCreditsScreen"
        android:text="Credits"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/htpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/amatic_sc_bold"
        android:onClick="openHelpScreen"
        android:text="Help"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/amatic_sc_bold"

        android:onClick="openSettingsScreen"
        android:text="Setting"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/muteButton"
        android:layout_width="88dp"
        android:layout_height="46dp"

        android:layout_marginStart="325dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_baseline_volume_mute_24"
        android:fontFamily="@font/amatic_sc_bold"
        android:onClick="toggleMute"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>