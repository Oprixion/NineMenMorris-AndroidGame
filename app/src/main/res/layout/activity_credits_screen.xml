<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".CreditsScreen">


    <TextView
        android:id="@+id/creditsTitle"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/custom_button"
        android:fontFamily="sans-serif"
        android:text="Credits"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/credits"
        android:layout_width="339dp"
        android:layout_height="446dp"
        android:fontFamily="sans-serif"
        android:inputType="textMultiLine"
        android:text="@string/nall_right_reserved_n_n_n_nmember_roles_n_ui_wireframe_and_prototype_cole_n_high_level_design_israel_n_low_level_design_thai_n_project_requirements_and_planning_james_n"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creditsTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>